<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Patients List</h1>
    
    <% if (result.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>D.O.B</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(row => { %>
                    <tr>
                        <td><%= row.patient_id %></td>
                        <td><%= row.first_name %></td>
                        <td><%= row.last_name %></td>
                        <td><%= row.date_of_birth %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No patients found with the specified first name.</p>
    <% } %>
</body>
</html>